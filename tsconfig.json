{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./dist",

    "module": "commonjs",
    "target": "ES2020",
    "declaration": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "jsx": "react",

    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,

    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true
  }
}
